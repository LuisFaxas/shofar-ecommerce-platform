{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shofar/api-client": ["packages/api-client/src"],
      "@shofar/feature-flags": ["packages/feature-flags/src"],
      "@shofar/config": ["packages/config"],
      "@shofar/shofar-brand-config": ["packages/shofar-brand-config/src"],
      "@shofar/pharma-brand-config": ["packages/pharma-brand-config/src"],
      "@shofar/faxas-brand-config": ["packages/faxas-brand-config/src"]
    }
  }
}