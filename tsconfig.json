{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shofar/ui": ["packages/ui/src"],
      "@shofar/api-client": ["packages/api-client/src"],
      "@shofar/feature-flags": ["packages/feature-flags/src"],
      "@shofar/config": ["packages/config"]
    }
  }
}