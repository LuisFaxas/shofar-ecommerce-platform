# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001

# Database Configuration
DB_TYPE=better-sqlite3  # Options: better-sqlite3, postgres
DB_DATABASE_FILE=vendure-db.sqlite  # For SQLite
DATABASE_URL=vendure-db.sqlite  # Legacy support

# Vendure Auth
SUPERADMIN_USERNAME=superadmin
SUPERADMIN_PASSWORD=superadmin123  # Change in production
COOKIE_SECRET=your-secure-cookie-secret-here

# Asset Storage Configuration
ASSET_UPLOAD_DIR=./static/assets  # Local directory for development

# S3/R2 Configuration (Production)
# S3_BUCKET=shofar-assets
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key

# Cloudflare R2 (Alternative to S3)
# R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com
# R2_BUCKET=shofar-assets
# R2_ACCESS_KEY_ID=your-r2-access-key
# R2_SECRET_ACCESS_KEY=your-r2-secret-key

# CDN Configuration
CDN_URL=  # Leave empty for development, e.g., https://cdn.example.com for production
ASSET_URL_PREFIX=http://localhost:3001/assets/