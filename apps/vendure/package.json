{
  "name": "@shofar/vendure",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "setup": "ts-node src/init-vendure.ts",
    "populate": "ts-node src/populate-db.ts",
    "seed:tooly": "ts-node src/initial-data/seed-tooly-full.ts",
    "migrate": "vendure migrate",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@vendure/admin-ui-plugin": "^3.1.1",
    "@vendure/asset-server-plugin": "^3.1.1",
    "@vendure/core": "^3.1.1",
    "@vendure/email-plugin": "^3.1.1",
    "@vendure/cli": "^3.1.1",
    "better-sqlite3": "^11.7.0",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@shofar/config": "workspace:*",
    "@types/node": "^20.17.14",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^8.57.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  }
}
