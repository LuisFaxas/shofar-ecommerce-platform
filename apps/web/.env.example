# Brand Resolution Configuration
# Mode A (Production - Recommended): Set BRAND_KEY to pin the brand
# This enables SSG/ISR and best performance
BRAND_KEY=tooly  # Options: tooly, peptides

# Mode B (Staging/Multi-domain): Leave BRAND_KEY unset
# Brand will be resolved by host/domain (SSR only)
# BRAND_KEY=

# Development Only - Cookie Override
# NEVER enable this in production
ALLOW_BRAND_COOKIE_OVERRIDE=false  # Set to true ONLY in development
JWT_SECRET=your-secret-key-change-in-production

# CDN Configuration
CDN_URL=https://cdn.example.com
NEXT_PUBLIC_CDN_URL=https://cdn.example.com

# Vendure API Configuration
NEXT_PUBLIC_VENDURE_SHOP_API_URL=http://localhost:3001/shop-api
NEXT_PUBLIC_VENDURE_ADMIN_API_URL=http://localhost:3001/admin-api

# Feature Flags
NEXT_PUBLIC_POSTHOG_KEY=phk_your_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
EDGE_CONFIG=your-edge-config-url

# Analytics (Brand-specific in production)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXX
NEXT_PUBLIC_GA_ID=UA-XXXXXX-X

# Authorize.Net Configuration
NEXT_PUBLIC_AUTHORIZENET_CLIENT_KEY=your_client_key
NEXT_PUBLIC_AUTHORIZENET_API_LOGIN_ID=your_api_login
AUTHORIZENET_TRANSACTION_KEY=your_transaction_key  # Server-side only

# Environment
NODE_ENV=development

# Database URL for Prisma (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/shofar

# NextAuth (if implementing auth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Monitoring & Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project